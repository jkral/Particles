<header>Particles: Only The Best Parts of Articles</header>

<div id="index_head">
<h1>All Particles</h1>
</div>


<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: 'article_title' %>
    </li>
  <% end %>

</ul>

<%= link_to "Create a new particle", new_article_path, class: 'new_article' %>

